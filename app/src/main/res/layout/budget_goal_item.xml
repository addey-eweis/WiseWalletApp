<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="25dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        android:text="Item Name"
        android:textSize="15sp"
        android:fontFamily="@font/open_sans_extrabold"
        android:textColor="@color/app_primary"/>
    <TextView
        android:id="@+id/budget_goal_fragment_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/budget_goal_fragment_currency_1"
        android:text="100"
        android:textColor="@color/app_primary"
        android:textSize="15sp"
        android:fontFamily="@font/open_sans_regular"/>
    <TextView
        android:id="@+id/budget_goal_fragment_currency_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="USD"
        android:textSize="15sp"
        android:fontFamily="@font/open_sans_bold"
        android:textColor="@color/app_primary"/>


    <TextView
        android:id="@+id/amount_saved_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/budget_goal_fragment_amount"
        android:text="100"
        android:textSize="15sp"
        android:fontFamily="@font/open_sans_semibold"/>


    <TextView
        android:id="@+id/budget_goal_fragment_currency_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USD"
        android:fontFamily="@font/open_sans_bold"
        android:layout_toRightOf="@id/amount_saved_up"
        android:layout_below="@id/budget_goal_fragment_amount"

        android:textSize="15sp"
        android:textColor="@color/app_primary"
        android:layout_alignBaseline="@id/amount_saved_up"/>
    <TextView
        android:id="@+id/of_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/amount_saved_up"
        android:layout_below="@id/budget_goal_fragment_amount"
        android:text="of"
        android:layout_marginHorizontal="5dp"
        android:textSize="15sp"
        android:layout_toRightOf="@id/budget_goal_fragment_currency_2"
        android:fontFamily="@font/open_sans_regular"/>
    <TextView
        android:id="@+id/goal_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/budget_goal_fragment_amount"
        android:layout_alignBaseline="@id/amount_saved_up"
        android:text="100"
        android:textSize="15sp"
        android:layout_toRightOf="@id/of_text"
        android:fontFamily="@font/open_sans_semibold"/>
    <TextView
        android:id="@+id/budget_goal_fragment_currency_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/amount_saved_up"
        android:text="USD"
        android:fontFamily="@font/open_sans_bold"
        android:layout_toRightOf="@id/goal_amount"
        android:layout_below="@id/budget_goal_fragment_amount"
        android:textSize="15sp"
        android:textColor="@color/app_primary" />
    <TextView
        android:id="@+id/budget_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/expected_date_before"
        android:text="Daily"
        android:fontFamily="@font/open_sans_bold"
        android:layout_alignParentEnd="true"
        android:textSize="15sp"
        android:textColor="@color/app_primary" />

    <TextView
        android:id="@+id/expected_date_before"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expected Date: "
        android:layout_marginTop="5dp"
        android:fontFamily="@font/open_sans_extrabold"
        android:layout_below="@id/budget_goal_fragment_currency_3"
        android:layout_alignParentStart="true"
        android:textSize="15sp"
        android:textColor="@color/app_primary" />
    <TextView
        android:id="@+id/expected_date_actual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20/04/2023"
        android:fontFamily="@font/open_sans_extrabold"
        android:layout_alignBaseline="@id/expected_date_before"
        android:layout_toRightOf="@id/expected_date_before"
        android:textSize="15sp"
        android:textColor="@color/app_primary" />
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/expected_date_actual"
        android:layout_marginTop="10dp"
        app:dividerColor="@color/app_foreground"/>






</RelativeLayout>