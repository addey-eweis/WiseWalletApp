<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authentication.SignUpActivity">

    <ImageView
        android:id="@+id/sign_up_logo"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:background="@drawable/sign_page_logo"
        android:contentDescription="Wise Wallet"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/sign_up_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_up_logo"
        android:text="Hi, Addey!"
        android:textSize="35sp"
        android:textColor="@color/app_primary"
        android:fontFamily="@font/open_sans_regular"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginVertical="80dp"/>

    <TextView
        android:id="@+id/create_an_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_up_name"
        android:text="Create an account"
        android:textColor="@color/app_primary"
        android:textSize="30sp"
        android:fontFamily="@font/open_sans_extrabold"
        android:layout_marginStart="30dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/name_signup_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_an_account"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:hint="Name"
        app:passwordToggleTint="@color/app_primary"
        android:layout_marginStart="30dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/name_signup"
            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:textColor="@color/app_primary"
            android:fontFamily="@font/open_sans_regular"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email_signup_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_signup_layout"
        android:layout_marginTop="20dp"
        android:hint="Email"
        android:layout_marginEnd="30dp"
        app:passwordToggleTint="@color/app_primary"
        android:layout_marginStart="30dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email_signup"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/open_sans_regular"
            android:textColor="@color/app_primary"
            android:backgroundTint="@color/white"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password_signup_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_signup_layout"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:hint="Password"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/app_primary"
        android:layout_marginStart="30dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password_signup"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:textColor="@color/app_primary"
            android:layout_height="match_parent"
            android:fontFamily="@font/open_sans_regular"
            android:backgroundTint="@color/white"/>

</com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/sign_up_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:textAlignment="center"
        android:textColor="@color/app_primary"
        android:text=""
        android:layout_below="@id/password_signup_layout"
        android:textSize="15sp"
        android:fontFamily="@font/open_sans_bold"
        android:layout_marginVertical="20dp"/>

    <Button
        android:id="@+id/sign_up_page_button"
        android:layout_below="@id/sign_up_status"
        android:background="@drawable/sign_in_button"
        android:layout_marginHorizontal="30dp"
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:text="Sign Up"
        android:layout_height="70dp"/>
