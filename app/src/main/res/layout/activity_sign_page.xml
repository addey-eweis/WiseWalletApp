<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authentication.SignActivity"
    android:background="@drawable/sign_page_background">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="30dp"
        android:paddingHorizontal="30dp">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:background="@drawable/sign_page_logo"
        android:contentDescription="Wise Wallet" />
    <ImageView
        android:id="@+id/sign_page_art"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:background="@drawable/sign_page"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"/>
    <TextView
        android:id="@+id/sign_page_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_page_art"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/open_sans_regular"
        android:text="Track Your Finances\nLike Never Before!"
        android:textSize="26sp"
        android:layout_marginBottom="70dp"
        android:textAlignment="center"
        android:layout_marginTop="25dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What's Your Name?"
        android:fontFamily="@font/open_sans_regular"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:layout_above="@id/sign_page_name"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/sign_page_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textColor="@color/white"
        android:textColorHint="@color/app_foreground"
        android:backgroundTint="@color/white"
        android:textSize="17sp"
        android:maxLines="1"
        android:maxLength="30"
        android:hint="Name"
        android:inputType="textCapWords"
        android:layout_below="@id/sign_page_text"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sign_page_signup_button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/sign_page_name"
        android:layout_marginTop="20dp"
        android:text="Get Started"
        android:fontFamily="@font/open_sans_regular"
        android:textColor="@color/app_primary"
        android:textSize="17sp"
        android:background="@drawable/signup_button"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/sign_page_signup_button"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/already_have_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_marginStart="50dp"
            android:textColor="@color/app_background"
            android:fontFamily="@font/open_sans_regular"
            android:text="Already have an account?"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/log_in_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:fontFamily="@font/open_sans_bold"
            android:layout_toEndOf="@id/already_have_account"
            android:layout_alignBaseline="@id/already_have_account"
            android:layout_marginStart="5dp"
            android:text="@string/sign_in"/>
    </RelativeLayout>
</RelativeLayout>
    </ScrollView>
</RelativeLayout>